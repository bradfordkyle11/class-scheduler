<android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/classPager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kmbapps.classscheduler.CreateScheduleFragment"
    android:background="@color/app_background">

    <android.support.v4.view.PagerTitleStrip
        android:id="@+id/pager_title_strip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/app_accent"
        android:textColor="#fff"
        android:paddingTop="@dimen/padding_inside_view"
        android:paddingBottom="@dimen/padding_inside_view" />



</android.support.v4.view.ViewPager>
