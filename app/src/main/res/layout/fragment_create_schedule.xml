<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kmbapps.classscheduler.CreateScheduleFragment">

    <android.support.v4.view.ViewPager
        android:id="@+id/createSchedulePager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.PagerTitleStrip
            android:id="@+id/pager_title_strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/app_accent"
            android:textColor="#fff"
            android:paddingTop="@dimen/padding_inside_view"
            android:paddingBottom="@dimen/padding_inside_view" />


    </android.support.v4.view.ViewPager>

</RelativeLayout>
