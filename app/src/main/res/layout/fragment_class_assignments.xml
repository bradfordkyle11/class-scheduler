<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context="com.kmbapps.classscheduler.ClassAssignmentsFragment"
    android:background="@color/app_background">

    <com.getbase.floatingactionbutton.AddFloatingActionButton
        android:id="@+id/add_assignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        fab:fab_colorNormal="@color/app_primary_color"
        fab:fab_colorPressed="@color/app_secondary_color" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/assignmentsList"
            android:divider="?android:dividerHorizontal"
            android:showDividers="middle">


            </LinearLayout>

    </ScrollView>



</RelativeLayout>
