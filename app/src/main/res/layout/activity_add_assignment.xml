<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.kmbapps.classscheduler.AddAssignmentActivity"
    android:orientation="vertical"
    android:id="@+id/addAssignmentLayout"
    android:background="@color/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/touchable_ui_component_min"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/typeLayout">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/hint_assignment_type"
            android:id="@+id/assignmentType"
            android:inputType="textCapWords"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:imeOptions="flagNoExtractUi"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/touchable_ui_component_min"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/nameLayout">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/hint_assignment_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:inputType="textCapWords"
            android:id="@+id/assignmentName"
            android:imeOptions="flagNoExtractUi"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/touchable_ui_component_min"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/dueDateLayout">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/hint_assignment_due_date"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/assignmentDueDate"
            android:onClick="selectDate"
            android:focusable="false"
            android:saveEnabled="false"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/hint_assignment_due_time"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/assignmentDueTime"
            android:onClick="selectTime"
            android:focusable="false"
            android:visibility="gone"
            android:saveEnabled="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/touchable_ui_component_min"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/gradeLayout">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/assignmentGrade"
            android:hint="@string/hint_assignment_grade"
            android:inputType="numberDecimal"
            android:imeOptions="flagNoExtractUi"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/touchable_ui_component_min"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/detailsLayout">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/hint_assignment_details"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:inputType="textCapSentences"
            android:id="@+id/assignmentDetails"/>

    </LinearLayout>




</LinearLayout>
