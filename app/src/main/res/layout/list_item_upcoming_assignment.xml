<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/touchable_ui_component_min"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/listItemUpcomingAssignment"
    android:background="@drawable/selector_list_item"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/assignmentType"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold"
        android:maxWidth="240dp"
        android:textColor="@android:color/primary_text_light"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_padding"
        android:paddingRight="@dimen/activity_padding"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:gravity="center_vertical"
        android:id="@+id/assignmentName"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/primary_text_light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:gravity="center_vertical"
        android:id="@+id/assignmentDueDate"
        android:textColor="@android:color/primary_text_light"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/checkboxCompleteAssignment"/>

</LinearLayout>